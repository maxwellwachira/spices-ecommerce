	<config>
		<fields name="params" addfieldpath="/plugins/system/t3/includes/depend">

			<!-- Sample for add or disable template parameters -->
			<!--fieldset name="menu_params" label="T3_PARAMS_MEGAMENU">
				<field name="group_disable" type="t3depend" function="@group">
					<option for="menu_as_bg" value="no">menu_as_bg</option>
				</field>
			</fieldset-->

			<fieldset name="theme_params" label="T3_THEME_LABEL" description="T3_THEME_DESC">
				<field name="logosticky" type="t3media" default=""
							 label="T3_THEME_STICKY_LOGO_LABEL"
							 description="T3_THEME_STICKY_LOGO_DESC"/>

				<field name="boxed_layout" type="radio" class="t3onoff" default="0" label="T3_EXTRAS_BOXED_LAYOUT_LABEL" description="T3_EXTRAS_BOXED_LAYOUT_DESC">
					<option value="0" class="off">JNO</option>
					<option value="1" class="on">JYES</option>
				</field>

				<field name="header_parameter" type="t3depend" function="@legend" label="T3_THEME_HEADER_PARAMETER_LABEL"
					description="T3_THEME_HEADER_PARAMETER_DESC"/>

				<field name="affix_header" type="radio" class="t3onoff" default="0" global="0" label="T3_THEME_HEADER_STICKY_LABEL"
							 description="T3_THEME_HEADER_STICKY_DESC">
					<option value="0" class="off">JNO</option>
					<option value="1" class="on">JYES</option>
				</field>

				<field name="parallax_parameter" type="t3depend" function="@legend" label="T3_THEME_PARALLAX_PARAMETER_LABEL"
					description="T3_THEME_PARALLAX_PARAMETER_DESC"/>

				<field name="bgparallax" type="t3media" default=""
							 label="T3_THEME_PARALLAX_BG_LABEL"
							 description="T3_THEME_PARALLAX_BG_DESC"/>

            </fieldset>

		</fields>



	</config>

	<updateservers>
		<server type="collection">http://update.joomlart.com/service/tracking/list.xml</server>
	</updateservers>

