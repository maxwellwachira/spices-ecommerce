					description="MOD_J2STORE_PRODUCTS_FIELD_SHOW_PRODUCT_DETAIL_PRODUCTS_DESC">
					<option value="article">J2STORE_ARTICLE_LINK</option>
					<option value="j2store">J2STORE_DETAIL_PRODUCT_LINK</option>
				</field>
				
