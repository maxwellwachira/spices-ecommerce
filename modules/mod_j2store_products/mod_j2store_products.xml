					<option value="article">J2STORE_ARTICLE_INTRO_IMAGE</option>
					<option value="j2store">J2STORE_J2STORE_THUMB_IMAGE</option>
				</field>
				<field name="link_j2store_detailproduct" type="list" class="input-xlarge"
