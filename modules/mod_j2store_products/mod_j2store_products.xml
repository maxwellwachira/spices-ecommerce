					size="22" filter="user_utc" />

				<field name="relative_date" type="text" default="30"
					label="MOD_J2STORE_PRODUCTS_FIELD_RELATIVEDATE_LABEL" description="MOD_J2STORE_PRODUCTS_FIELD_RELATIVEDATE_DESC" />

