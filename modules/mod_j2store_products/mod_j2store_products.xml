					<option value="publish_up">MOD_J2STORE_PRODUCTS_OPTION_STARTPUBLISHING_VALUE
					</option>
					<option value="a.publish_down">MOD_J2STORE_PRODUCTS_OPTION_FINISHPUBLISHING_VALUE
